@{
    ViewBag.Title = "Home Page";
}
<div id="contact">
    <div class="container">
        <div class="col-md-6">
            <div class="row">
                <div class="section-title">
                    <h2>Select File</h2>
                    <p>Please select the flat file which you want into extract.</p>
                </div>

                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input class="form-control" type="file" name="FileUpload" />
                    <br />
                    <label>Delimiter</label>
                    <input class="form-control" type="text" name="delimiter" />
                    <br />
                    <br />
                    <input class="btn btn-custom btn-lg" type="submit" name="Submit" id="Submit" value="Upload" />
                    <br />
                }
            </div>
            <div class="alert " id="outputmsg">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success" id="successMessage">@TempData["Success"]</div>
                }
                @if (TempData["Fail"] != null)
                {
                    <div class="alert alert-danger" id="failMsg">@TempData["Fail"]</div>
                }
            </div>
        </div>

    </div>

</div>
<script type="text/javascript">
    window.setTimeout(function () {
        // This will execute 5 seconds later
        var label = document.getElementById('outputmsg');
        if (label != null) {
            label.style.display = 'none';
        }
    }, 10000);
</script>